{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"esModuleInterop": true,
        "downlevelIteration": true,
		"importHelpers": true,
		"jsx": "preserve",
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost",
			"es5"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "typings/dist",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES5",
		"types": [
			"webpack-env",
			"vue"
		],
        "paths": {
            "typings/*": ["../typings/*"]
        }
	},
	"exclude": [
		"node_modules"
	]
}
